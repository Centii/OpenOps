<h1>Listing host_states</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @host_states.each do |host_state| %>
      <tr>
        <td><%= host_state.name %></td>
        <td><%= link_to 'Show', host_state %></td>
        <td><%= link_to 'Edit', edit_host_state_path(host_state) %></td>
        <td><%= link_to 'Destroy', host_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

