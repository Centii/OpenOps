<h1>Listing checkpoint_frequencies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hours apart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checkpoint_frequencies.each do |checkpoint_frequency| %>
      <tr>
        <td><%= checkpoint_frequency.name %></td>
        <td><%= checkpoint_frequency.hours_apart %></td>
        <td><%= link_to 'Show', checkpoint_frequency %></td>
        <td><%= link_to 'Edit', edit_checkpoint_frequency_path(checkpoint_frequency) %></td>
        <td><%= link_to 'Destroy', checkpoint_frequency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

