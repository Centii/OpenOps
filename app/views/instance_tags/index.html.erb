<h1>Listing instance_tags</h1>

<table>
  <thead>
    <tr>
      <th>Instance</th>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instance_tags.each do |instance_tag| %>
      <tr>
        <td><%= instance_tag.instance_id %></td>
        <td><%= instance_tag.name %></td>
        <td><%= instance_tag.value %></td>
        <td><%= link_to 'Show', instance_tag %></td>
        <td><%= link_to 'Edit', edit_instance_tag_path(instance_tag) %></td>
        <td><%= link_to 'Destroy', instance_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

